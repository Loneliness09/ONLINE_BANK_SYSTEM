    <servlet>
        <servlet-name>CreateAccountServlet</servlet-name>
        <servlet-class>com.servlet.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccountServlet</servlet-name>
        <url-pattern>/createAccountServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginAccountServlet</servlet-name>
        <servlet-class>com.servlet.LoginAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAccountServlet</servlet-name>
        <url-pattern>/loginAccountServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutAccountServlet</servlet-name>
        <servlet-class>com.servlet.LogoutAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutAccountServlet</servlet-name>
        <url-pattern>/logoutAccountServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <servlet-class>com.servlet.DeleteAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
